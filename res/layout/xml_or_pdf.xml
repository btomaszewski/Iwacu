<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SwipeTabsMainActivity" 
    
    android:background="#FFFFFF">

    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/linearlayout_bg"
        android:padding="10dp"
        >
        
        
        <Button 
	       	android:id="@+id/xmlbtn"
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:paddingRight="10dp"
	       	android:paddingLeft="100dp"
	        android:layout_margin="4dp"
	        android:background="@drawable/layers_fb_button_bg"
	       	android:text="Spatial Thinking Lessons"
            style="@style/ButtonText"
	       />
        
        <!--  Do not need a PDF tool
        <Button 
	       	android:id="@+id/pdfbtn"
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	         android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:paddingRight="10dp"
	        android:paddingLeft="100dp"
	       	android:layout_margin="4dp"
	        android:background="@drawable/layers_gplus_button_bg"
	       	android:text="Information About Rwandan Geography"
	        style="@style/ButtonText"
	       />
        -->
        <Button 
	       	android:id="@+id/skipbtn"
	       	android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:paddingRight="10dp"
	       	android:paddingLeft="100dp"
	        android:layout_margin="4dp"
	       	android:background="@drawable/layers_twitter_button_bg"
	       	android:text="Spatial Thinking Tools"
	       	style="@style/ButtonText"
	       />
        </LinearLayout>

</RelativeLayout>