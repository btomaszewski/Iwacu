<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/id_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/id_content"
                android:layout_below="@+id/id_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_below="@+id/id_content"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/menu_by_map" />

                <Button
                    android:id="@+id/activityButton"
                    android:layout_below="@+id/id_content"
                    android:layout_toRightOf="@+id/imageView1"
                    android:layout_width="168dp"
                    android:layout_height="163dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                       android:paddingLeft="10dp"
                    android:layout_margin="4dp"
                    style="@style/ButtonText"
                    android:background="@drawable/new_map"
                    android:text="Activity Button" />

                <Button
                    android:id="@+id/VideoButton"
                    android:layout_below="@+id/id_content"
                    android:layout_toRightOf="@+id/activityButton"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_margin="4dp"
                    style="@style/ButtonText"
                    android:background="@drawable/video"
                    android:text="Video"
                    android:layout_width="178dp" />

                <Button
                    android:id="@+id/QuizButton"
                    android:layout_below="@+id/id_content"
                    android:layout_toRightOf="@+id/activityButton"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                       android:paddingLeft="10dp"
                    android:layout_margin="4dp"
                    style="@style/ButtonText"
                    android:background="@drawable/quiz"
                    android:text="" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

